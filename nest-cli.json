{
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "publisher": {
      "type": "application",
      "root": "apps/publisher",
      "entryFile": "main",
      "sourceRoot": "apps/publisher/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/publisher/tsconfig.app.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/worker/tsconfig.app.json"
      }
    }
  }
}
