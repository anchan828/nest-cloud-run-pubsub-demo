{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "./dist",
    "noEmit": true,
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
